---
import { Icon } from "astro-icon/components";

/** 
	Uses https://www.astroicon.dev/getting-started/
	Only installed pack is: @iconify-json/mdi
	You can browse icons at https://icon-sets.iconify.design/mdi/
*/
const socialLinks: {
	friendlyName: string;
	isWebmention?: boolean;
	link: string;
	name: string;
}[] = [
	{
		friendlyName: "GitHub",
		link: "https://github.com/kasturikandalam",
		name: "mdi:github",
	},
	{
		friendlyName: "LinkedIn",
		link: "https://www.linkedin.com/in/kasturi-kandalam-3b3885148/",
		name: "mdi:linkedin",
	},
	{
		friendlyName: "Email",
		link: "mailto:kasturiveemohan@gmail.com",
		name: "mdi:email-outline",
	},
	{
		friendlyName: "Twitter",
		link: "https://x.com/th0ughtcascades",
		name: "mdi:twitter",
	},
	{
		friendlyName: "Favorite website to go to",
		link: "https://www.tree.fm/",
		name: "mdi:school-outline",
	},
];
---

<div class="flex flex-wrap items-end gap-x-2">
	<p>Find me on</p>
	<ul class="flex flex-1 items-center gap-x-2 sm:flex-initial">
		{
			socialLinks.map(({ friendlyName, isWebmention, link, name }) => (
				<li class="flex">
					<a
						class="inline-block p-1 sm:hover:text-link"
						href={link}
						rel={`noopener noreferrer ${isWebmention ? "me authn" : ""}`}
						target="_blank"
					>
						<Icon
							aria-hidden="true"
							class="h-6 w-6"
							focusable="false"
							name={name}
						/>
						<span class="sr-only">{friendlyName}</span>
					</a>
				</li>
			))
		}
	</ul>
</div>
